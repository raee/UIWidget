<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SlideDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/SlideAnimation</item>
    </style>

    <style name="SlideAnimation">
        <item name="android:windowEnterAnimation">@anim/widget_dialog_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/widget_dialog_slide_out_bottom</item>
    </style>


    <style name="ShareIcon">
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:layout_marginBottom">22dp</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:textColor">#434343</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="FilterStyle" parent="TextAppearance.AppCompat.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#595959</item>
    </style>

</resources>